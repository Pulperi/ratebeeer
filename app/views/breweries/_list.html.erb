<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:'name', sort: session[:breweries_next_sort]) %></th>
    <th><%= link_to 'Year', breweries_path(order:'year', sort: session[:breweries_next_sort]) %></th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <% if current_user %>
            <td>
              <%= link_to 'Edit', edit_brewery_path(brewery), class:'btn btn-warning' %>
              <%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

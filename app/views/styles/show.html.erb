<h1><%= @style.name %></h1>
<p><%= @style.desc %></p>
<strong>beers</strong>
<ul>
  <% @style.beers.each do |beer| %>
      <li><%= link_to beer.name, beer %> by <%= link_to beer.brewery.name, beer.brewery %></li>
  <% end %>
</ul>

<% if current_user %><%= link_to 'Edit', edit_style_path(@style) %> | <%= link_to 'Destroy', @style, method: :delete, data: { confirm: 'Are you sure?' } %> <% end %>
<%= link_to 'Back', styles_path %>
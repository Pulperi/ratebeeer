<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style</strong>
  <%= link_to @beer.style, @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
      Beer has not been rated!
  <% else %>
      Has <%= pluralize(@beer.ratings.count, 'rating', 'ratings') %>, average <%= @beer.average_rating %>
  <% end %>
</p>

<% if current_user %>

    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit class: 'btn btn-primary' %>
    <% end %>
<% end %>

<% if current_user %><%= link_to 'Edit', edit_beer_path(@beer), class:'btn btn-warning' %> |<% end %>
<%= link_to 'Back', beers_path, class:'btn btn-default' %>
